<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.SQLServer2005Dialect
		</property>
		<property name="hibernate.connection.driver_class">net.sourceforge.jtds.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:jtds:sqlserver://localhost:1433;instance=SQLEXPRESS2008R2;selectMethod=cursor;databaseName=reporting_1_13_x
		</property>
		<property name="hibernate.connection.username">scheduler</property>
		<property name="hibernate.connection.password">scheduler</property>

		<property name="hibernate.connection.autocommit">false</property>
		<property name="hibernate.temp.use_jdbc_metadata_defaults">false</property>
		<property name="hibernate.show_sql">false</property>
		<property name="hibernate.format_sql">true</property>
	</session-factory>
</hibernate-configuration>
